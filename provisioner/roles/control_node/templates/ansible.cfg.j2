[defaults]
stdout_callback = yaml
connection = smart
timeout = 60
deprecation_warnings = False
host_key_checking = False
retry_files_enabled = False
{% if workshop_type == 'rhel' %}
inventory = /home/{{username}}/lightbulb/lessons/lab_inventory/{{username}}-instances.txt
{% elif workshop_type == 'devops' %}  
inventory = /home/{{username}}/devops-workshop/lab_inventory/hosts
{% else %}
inventory = /home/{{username}}/networking-workshop/lab_inventory/hosts
[persistent_connection]
connect_timeout = 60
command_timeout = 60
{% endif %}
